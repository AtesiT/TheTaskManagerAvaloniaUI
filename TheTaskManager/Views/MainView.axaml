<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:TheTaskManager.ViewModels"
             xmlns:models="using:TheTaskManager.Models"
             x:Class="TheTaskManager.Views.MainView"
             x:DataType="vm:MainViewModel">

    <UserControl.Styles>
        <Style Selector="Border.task-card">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BoxShadow" Value="0 2 8 0 #20000000"/>
        </Style>

        <Style Selector="Border.task-card:pointerover">
            <Setter Property="BoxShadow" Value="0 4 12 0 #30000000"/>
        </Style>
        
        <Style Selector="Button.toolbar-btn">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style Selector="Button.toolbar-btn:pointerover">
            <Setter Property="Background" Value="#FFFFFF30"/>
        </Style>
        
        <Style Selector="Button.toolbar-btn:disabled">
            <Setter Property="Opacity" Value="0.5"/>
        </Style>
        
        <Style Selector="Button.action-btn">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto,*" Background="#F5F5F5">

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#1976D2" Padding="20">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel>
                    <TextBlock Text="TheTaskManager"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="Система управления задачами сотрудников"
                               FontSize="14"
                               Foreground="#B3FFFFFF"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Панель инструментов -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            Spacing="5">
                    
                    <Button Classes="toolbar-btn"
                            Command="{Binding AddTaskCommand}"
                            ToolTip.Tip="Добавить задачу">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="➕" FontSize="16"/>
                            <TextBlock Text="Добавить" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Classes="toolbar-btn"
                            Command="{Binding EditTaskCommand}"
                            ToolTip.Tip="Редактировать задачу">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="✏️" FontSize="16"/>
                            <TextBlock Text="Изменить" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Classes="toolbar-btn"
                            Command="{Binding DeleteTaskCommand}"
                            ToolTip.Tip="Удалить задачу">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="🗑️" FontSize="16"/>
                            <TextBlock Text="Удалить" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Border Width="1" Background="#FFFFFF50" Margin="10,5"/>
                    
                    <TextBlock Text="Всего задач: " 
                               Foreground="White" 
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Tasks.Count}"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="18"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="1" ColumnDefinitions="*,350" Margin="15">

            <!-- Список задач -->
            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="10"
                    Padding="15"
                    Margin="0,0,10,0">
                <Grid RowDefinitions="Auto,*">
                    <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,15">
                        <TextBlock Text="📋 Список задач"
                                   FontSize="18"
                                   FontWeight="SemiBold"/>
                        
                        <!-- Быстрая кнопка добавления -->
                        <Button Grid.Column="1"
                                Content="+ Новая задача"
                                Command="{Binding AddTaskCommand}"
                                Background="#4CAF50"
                                Foreground="White"
                                Padding="12,6"
                                CornerRadius="4"
                                FontSize="12"/>
                    </Grid>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Tasks}"
                             SelectedItem="{Binding SelectedTask}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="models:TaskItem">
                                <Border Classes="task-card">
                                    <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto">

                                        <!-- Заголовок и приоритет -->
                                        <TextBlock Grid.Row="0"
                                                   Text="{Binding Title}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <Border Grid.Row="0" Grid.Column="1"
                                                CornerRadius="4"
                                                Padding="8,4"
                                                Background="{Binding Priority, Converter={x:Static vm:Converters.PriorityToColor}}">
                                            <TextBlock Text="{Binding Priority, Converter={x:Static vm:Converters.PriorityToString}}"
                                                       FontSize="11"
                                                       Foreground="White"/>
                                        </Border>

                                        <!-- Описание -->
                                        <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                                                   Text="{Binding Description}"
                                                   FontSize="13"
                                                   Foreground="#666"
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="0,8,0,0"/>

                                        <!-- Исполнитель и дата -->
                                        <StackPanel Grid.Row="2" Grid.ColumnSpan="2"
                                                    Orientation="Horizontal"
                                                    Margin="0,10,0,0">
                                            <TextBlock Text="👤 " FontSize="12"/>
                                            <TextBlock Text="{Binding AssignedTo}"
                                                       FontSize="12"
                                                       Foreground="#888"/>
                                            <TextBlock Text="  |  📅 " FontSize="12" Foreground="#888"/>
                                            <TextBlock Text="{Binding DueDate, StringFormat='{}{0:dd.MM.yyyy}'}"
                                                       FontSize="12"
                                                       Foreground="#888"/>
                                        </StackPanel>

                                        <!-- Статус -->
                                        <Border Grid.Row="3" Grid.ColumnSpan="2"
                                                Margin="0,10,0,0"
                                                Background="{Binding Status, Converter={x:Static vm:Converters.StatusToColor}}"
                                                CornerRadius="4"
                                                Padding="8,4"
                                                HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding Status, Converter={x:Static vm:Converters.StatusToString}}"
                                                       FontSize="11"
                                                       Foreground="White"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Панель деталей -->
            <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="10"
                    Padding="20">
                <Grid RowDefinitions="Auto,*,Auto">
                    <TextBlock Text="📝 Детали задачи"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"/>

                    <ScrollViewer Grid.Row="1">
                        <StackPanel IsVisible="{Binding SelectedTask, Converter={x:Static ObjectConverters.IsNotNull}}">

                            <TextBlock Text="Название:" FontWeight="SemiBold" Foreground="#666"/>
                            <TextBlock Text="{Binding SelectedTask.Title}"
                                       FontSize="16"
                                       TextWrapping="Wrap"
                                       Margin="0,5,0,15"/>

                            <TextBlock Text="Описание:" FontWeight="SemiBold" Foreground="#666"/>
                            <TextBlock Text="{Binding SelectedTask.Description}"
                                       TextWrapping="Wrap"
                                       Margin="0,5,0,15"/>

                            <TextBlock Text="Исполнитель:" FontWeight="SemiBold" Foreground="#666"/>
                            <TextBlock Text="{Binding SelectedTask.AssignedTo}"
                                       Margin="0,5,0,15"/>

                            <TextBlock Text="Приоритет:" FontWeight="SemiBold" Foreground="#666"/>
                            <TextBlock Text="{Binding SelectedTask.Priority, Converter={x:Static vm:Converters.PriorityToString}}"
                                       Margin="0,5,0,15"/>

                            <TextBlock Text="Статус:" FontWeight="SemiBold" Foreground="#666"/>
                            <TextBlock Text="{Binding SelectedTask.Status, Converter={x:Static vm:Converters.StatusToString}}"
                                       Margin="0,5,0,15"/>

                            <TextBlock Text="Дата создания:" FontWeight="SemiBold" Foreground="#666"/>
                            <TextBlock Text="{Binding SelectedTask.CreatedDate, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}"
                                       Margin="0,5,0,15"/>

                            <TextBlock Text="Срок выполнения:" FontWeight="SemiBold" Foreground="#666"/>
                            <TextBlock Text="{Binding SelectedTask.DueDate, StringFormat='{}{0:dd.MM.yyyy}'}"
                                       Margin="0,5,0,15"/>

                        </StackPanel>
                    </ScrollViewer>
                    
                    <!-- Кнопки действий для выбранной задачи -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                Spacing="10"
                                IsVisible="{Binding SelectedTask, Converter={x:Static ObjectConverters.IsNotNull}}"
                                Margin="0,15,0,0">
                        <Button Classes="action-btn"
                                Content="✏️ Изменить"
                                Command="{Binding EditTaskCommand}"
                                Background="#FF9800"
                                Foreground="White"/>
                        <Button Classes="action-btn"
                                Content="🗑️ Удалить"
                                Command="{Binding DeleteTaskCommand}"
                                Background="#F44336"
                                Foreground="White"/>
                    </StackPanel>

                    <!-- Заглушка если задача не выбрана -->
                    <StackPanel Grid.Row="1"
                                IsVisible="{Binding SelectedTask, Converter={x:Static ObjectConverters.IsNull}}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock Text="📌" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="Выберите задачу"
                                   FontSize="16"
                                   Foreground="#999"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"/>
                        <Button Content="+ Создать новую"
                                Command="{Binding AddTaskCommand}"
                                Margin="0,15,0,0"
                                Background="#1976D2"
                                Foreground="White"
                                Padding="20,10"
                                CornerRadius="6"
                                HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>